<div class = "users show">
	<h2>Show User</h2>
	<table summary="user detail view" >
		<tr>
			<th>Username</th>
			<td><%= @user.username %></td>
		</tr>
		<tr>
			<th>Email</th>
			<td><%= @user.email %></td>
		</tr>
		<tr>
			<th>Password</th>
			<td><%= @user.password %></td>
		</tr>
		<tr>
			<th>Events</th>
			<td><%= @user.evs.size %></td>
		</tr>
		<tr>
			<th>Created</th>
			<td><%= @user.created_at %></td>
		</tr>
		<tr>
			<th>Updated</th>
			<td><%= @user.updated_at %></td>
		</tr>
		<tr>
			<%= link_to("Edit",{:action => 'edit' , :id => @user.id},:class => 'action edit')%>
		</tr>
	</table>
</div>